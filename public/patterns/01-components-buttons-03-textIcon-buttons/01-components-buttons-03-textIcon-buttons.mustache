<h3>Text + Icon Buttons</h3>
<div class="button-row">
  <div class="button-grid">
    <button type="submit" href="#" class="button button_primary-icon"><i class="fal fa-frog"></i> {{ btnText }}</button>
    <div class="button-label">State: Default</div>
  </div>
  <div class="button-grid">
    <button type="submit" href="#" class="button button_primary-icon hover"><i class="fal fa-frog"></i> {{ btnText }}</button>
    <div class="button-label">State: Hover</div>
  </div>
  <div class="button-grid">
    <button type="submit" href="#" class="button button_primary-icon pressed"><i class="fal fa-frog"></i> {{ btnText }}</button>
    <div class="button-label">State: Pressed</div>
  </div>
</div>
