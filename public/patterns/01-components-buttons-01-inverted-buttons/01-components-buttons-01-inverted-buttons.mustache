<h3>Inverted Buttons</h3>
<div class="button-row">
  <div class="button-grid">
    <button type="submit" href="#" class="button button_inverted">{{ btnText }}</button>
    <div class="button-label">State: Default</div>
  </div>
  <div class="button-grid">
    <button type="submit" href="#" class="button button_inverted hover">{{ btnText }}</button>
    <div class="button-label">State: Hover</div>
  </div>
  <div class="button-grid">
    <button type="submit" href="#" class="button button_inverted pressed">{{ btnText }}</button>
    <div class="button-label">State: Pressed</div>
  </div>
</div>
